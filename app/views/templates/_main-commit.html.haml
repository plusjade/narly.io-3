%script{ id: "commit-container-template", type: "x-template" }
  #lesson-pane
    .section-inner
      .readme-content
        {{{ lesson }}}
  #code-pane
    .section-inner
      .diffs-wrap
        {{# diffs }}
        .diff-file{ class: "{{ status }}" }
          %span.show-content{ href: '#' } view file
          %textarea.file-content{ spellcheck: 'false' }
            {{{ content }}}
          .diff-header
            %strong {{ path }}
          .diff-content
            {{{ html }}}
        {{/ diffs }}
      {{# output }}
      %h3.section-heading Expected Output
      {{/ output }}
      .readme-content
        {{{ output }}}
